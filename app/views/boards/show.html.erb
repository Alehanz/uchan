<div class="boardNav">
  <span class="boardList">
    <span class="braces">
      [<% @boards.each do |board| %>
      /<%= link_to board.name, board_path(board) %>
      <% end %>]
    </span>
    <span class="braces">[<%= link_to "Home", root_path %>]</span>
  </span>
</div>

<div class="boardBanner">
  <div id="boardCnt">
    Placeholder
  </div>
  <div class="boardTitle">
    <%= @board.name %>
  </div>
</div>

<hr />

<div id="togglePostForm">
  [<%= link_to "Start a New Thread", "#" %>]
</div>

<div id="form-container">
  <%= render "shared/topic_form" %>
</div>

<hr />

<div class="board">
  <% @topics.each do |topic| %>
    <div class="thread">
      <%= link_to topic.thread_name, board_topic_path(@board, topic) %>
      <hr />
    </div>
  <% end %>
</div>

<hr />
